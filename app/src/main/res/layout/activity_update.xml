<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updateActivity"
    >

    <EditText
        android:id="@+id/titleEditTextTextEdit"
        android:layout_width="371dp"
        android:layout_height="56dp"
        android:ems="10"
        android:hint="titulo"
        android:inputType="text"
        android:textColor="@color/baseLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.154" />

    <EditText
        android:id="@+id/detailEditTextTextEdit"
        android:layout_width="371dp"
        android:layout_height="56dp"
        android:ems="10"
        android:hint="Descricion"
        android:textColor="@color/baseLight"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.284" />

    <EditText
        android:id="@+id/dateEditTextTextEdit"
        android:layout_width="371dp"
        android:layout_height="56dp"
        android:ems="10"
        android:hint="Fecha"
        android:inputType="date"
        android:textColor="@color/baseLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.425" />

    <ImageView
        android:id="@+id/backImageViewEdit"
        android:layout_width="55dp"
        android:layout_height="52dp"
        app:layout_constraintBottom_toTopOf="@+id/titleEditTextTextEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.134"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <Button
        android:id="@+id/editarButton"
        android:layout_width="246dp"
        android:layout_height="52dp"
        android:text="Editar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateEditTextTextEdit"
        app:layout_constraintVertical_bias="0.87"
        android:textColor="@color/black"/>

    <Spinner
        android:id="@+id/checkSpinner"
        android:layout_width="376dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toTopOf="@+id/editarButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateEditTextTextEdit"
        app:layout_constraintVertical_bias="0.093"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="172dp"
        android:layout_height="46dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Editar"
        android:textColor="@color/baseLight"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/titleEditTextTextEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toEndOf="@+id/backImageViewEdit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />
</androidx.constraintlayout.widget.ConstraintLayout>